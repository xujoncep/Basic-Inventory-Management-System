@using DataAccessLayer.ViewModels.Auth.Account
@model RegisterUser
@{
    ViewData["Title"] = "Register";
}
<div style="max-width:440px; margin-top:100px;" class="mx-auto">
    <form method="post">
        <h1 class ="text-center">Create Account!</h1>
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="form-floating mb-3">
            <input asp-for="Email" class="form-control" placeholder="admin@example.com" />
            <label asp-for="Email">Email</label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Password" class="form-control" placeholder="********" />
            <label asp-for="Password">Password</label>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="ConfirmPassword" class="form-control" placeholder="********" />
            <label asp-for="ConfirmPassword">Confirm Password</label>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <div>
            <button type="submit" class="w-100 btn btn-lg " style="background-color:#57F35A;">Register</button>
        </div>
        <div>
            <p class="mt-2">
                <span>Already have an account? </span><a asp-action="Login" asp-controller="Account" style="color:#57F35A; font-weight:bold;">Login</a>
            </p>
        </div>
    </form>
</div>