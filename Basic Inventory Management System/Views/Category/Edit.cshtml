@model DataAccessLayer.Models.Category
@{
    ViewData["Title"] = "Edit";
}

<div class="card my-2 col-lg-8 mx-auto">
    <div class="card-header">
        <h3>Edit Subject</h3>
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoryId" />

            <div class="row mb-2">
                <div class="col-2 fw-semibold">
                    <label asp-for="CategoryName" class="col-form-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="CategoryName" class="form-control" />
                </div>
                <div class="col-4">
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-2">
                <div class="col-2 fw-semibold">
                    <label asp-for="IsActive" class="col-form-label"></label>
                </div>
                <div class="col-6">
                    <input type="checkbox" data-on-text="Yes" data-off-text="No" class="switchBootstrap" name="IsActive" value="1" data-on-color="success" data-off-color="danger" @(Model.IsActive == 1 ? "checked" : "") />
                </div>
                <div class="col-4">
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex justify-content-end mt-3">
                <input type="submit" value="Update Data" class="btn btn-success btn-sm" />
            </div>
        </form>
    </div>
    <div class="card-footer">
        <div class="d-flex justify-content-start">
            <a asp-action="Index" class="btn btn-link text-decoration-none btn-sm"><i class="fa-solid fa-arrow-left"></i> Back to List</a>
        </div>
    </div>
</div>


@section Scripts {
    <script>

        $(".switchBootstrap").bootstrapSwitch();

    </script>
}