@model DataAccessLayer.Models.Product
@{
    ViewData["Title"] = "Create";
}
<div class="card my-2 row col-lg-8 mx-auto">
    <div class="card-header">
        <h3>Add New Product</h3>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row mb-2">
                <div class="col-2 fw-semibold">
                    <label asp-for="ProductName" class="col-form-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="ProductName" class="form-control" />
                </div>
                <div class="col-4">
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-2">
                <div class="col-2 fw-semibold">
                    <label asp-for="CategoryId" class="col-form-label"></label>
                </div>
                <div class="col-6">
                    @Html.DropDownList("CategoryId", new SelectList(Model.CategoryDDL, "Value", "Text"), "--Select--", new { @class = "form-control" })
                </div>
                <div class="col-4">
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-2">
                <div class="col-2 fw-semibold">
                    <label asp-for="BasePrice" class="col-form-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="BasePrice" class="form-control" />
                </div>
                <div class="col-4">
                    <span asp-validation-for="BasePrice" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-2">
                <div class="col-2 fw-semibold">
                    <label asp-for="QuantityInStock" class="col-form-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="QuantityInStock" class="form-control" />
                </div>
                <div class="col-4">
                    <span asp-validation-for="QuantityInStock" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-2">
                <div class="col-2 fw-semibold">
                    <label asp-for="IsActive" class="col-form-label"></label>
                </div>
                <div class="col-6">
                    <input type="checkbox" data-on-text="Yes" data-off-text="No" class="switchBootstrap" name="IsActive" value="1" data-on-color="success" data-off-color="danger" checked />
                </div>
                <div class="col-4">
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex justify-content-end mt-2">
                <input type="submit" value="Save Data" class="btn btn-success btn-sm" />
            </div>
        </form>
    </div>
    <div class="card-footer">
        <div class="d-flex justify-content-start">
            <a asp-action="Index" class="btn btn-link btn-sm text-decoration-none"><i class="fa-solid fa-arrow-left"></i> Back to List</a>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        $(".switchBootstrap").bootstrapSwitch();
    </script>
}