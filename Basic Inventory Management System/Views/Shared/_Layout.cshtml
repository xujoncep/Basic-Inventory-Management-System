@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Basic_Inventory_Management_System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Basic_Inventory_Management_System.styles.css" asp-append-version="true" />
    <style>
        /* Custom styles for the YouTube-like buttons */
        .youtube-btn {
            background-color: #BE254D;
            color: white;
            border-radius: 4px;
            padding: 8px 16px;
            border: none;
            font-weight: bold;
            text-transform: uppercase;
        }

            .youtube-btn:hover {
                background-color: #a81e45; /* Slightly darker on hover */
                color: white;
            }

        /* Custom navbar background color */
        .custom-navbar {
            background-color: #FAFDF3 !important;
        }

            /* Text color for links in the navbar */
            .custom-navbar a {
                color: #1A832E !important;
                text-decoration: none;
            }

        /* Make the login and register buttons look like regular links */
        .link-btn {
            background: none;
            border: none;
            color: #1A832E;
            padding: 0;
            font-size: inherit;
            text-decoration: none;
        }

            .link-btn:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark custom-navbar border-bottom box-shadow mb-3 py-3">
            <div class="container-fluid px-5">
                <a class="navbar-brand fw-bolder" asp-area="" asp-controller="Home" asp-action="Index" style="color:#BE254D;">BIMS™</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link fw-bolder" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav ml-auto">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <form method="post" asp-controller="Account" asp-action="Logout">
                                    <span class="text-dark fw-bolder">Hello @User.Identity?.Name! </span>
                                    <button type="submit" class="youtube-btn">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link link-btn fw-bolder" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link link-btn ms-2 fw-bolder" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - BIMS - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
