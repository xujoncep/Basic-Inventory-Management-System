@model IEnumerable<DataAccessLayer.Models.Customer>
@{
    ViewData["Title"] = "Index";
    string messageSuccess = "";
    string messageFailed = "";
    if (TempData["success"] != null)
    {
        messageSuccess = TempData["success"].ToString();
    }
    else if (TempData["failed"] != null)
    {
        messageFailed = TempData["failed"].ToString();
    }
    TempData.Clear();
}
<div class="card m-4">
    <div class="card-header">
        <h2 class="alert alert-success text-center">Customer List</h2>
        <div class="d-flex justify-content-end">
            <a asp-action="Create" class="btn" style="background-color:#57F35A;"><i class="fa-solid fa-plus"></i> Add New</a>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-striped table-bordered dataTable">
            <thead class="table-success">
                <tr>
                    <th>
                        Action
                    </th>
                    <th>
                        @Html.DisplayNameFor(x => x.CustomerName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(x => x.CustomerCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(x => x.ContactInfo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(x => x.IsActive)
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.CustomerId" class="btn btn-warning btn-sm">
                                    <i class="fa-solid fa-pen-to-square"></i> Edit
                                </a>
                            </td>
                            <td>
                                @Html.DisplayFor(x => item.CustomerName)
                            </td>
                            <td>
                                @Html.DisplayFor(x => item.CustomerCode)
                            </td>
                            <td>
                                @Html.DisplayFor(x => item.ContactInfo)
                            </td>
                            <td>
                                @if (item.IsActive == 1)
                                {
                                    <span class="badge bg-success">Yes</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">No</span>
                                }
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td align="center" colspan="5">No Data Found !</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section scripts {
    <script>
        if ('@messageSuccess' != "") {
            toastr["success"]("@messageSuccess", "Done");
        }
        else if ('@messageFailed' != "") {
            toastr["warning"]("@messageFailed", "Error");
        }
        $(document).ready(function () {
            $('.dataTable').DataTable();
        });
    </script>
}